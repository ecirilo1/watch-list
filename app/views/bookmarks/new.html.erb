<div class="container">
  <div class="row">
    <div class="col">
      <h1>Bookmark</h1>

      <%= simple_form_for @Bookmark do |f| %>
        <%= f.input :title %>
        <%= f.input :overview %>
        <%= f.input :rating %>
        <%= f.input :poster_url %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>